<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-drop-existing-tables" author="aimen.saihi">
        <dropTable tableName="sample_table" cascadeConstraints="true"/>
    </changeSet>

    <changeSet id="002-create-company" author="aimen.saihi">
        <createTable tableName="company">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="tax_id" type="varchar(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="003-create-department" author="aimen.saihi">
        <createTable tableName="department">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="company_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_department_company"
                             references="company(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-create-employee" author="aimen.saihi">
        <createTable tableName="employee">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="department_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_employee_department"
                             references="department(id)"/>
            </column>
            <column name="hire_date" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="005-create-indexes" author="aimen.saihi">
        <createIndex indexName="idx_employee_email" tableName="employee">
            <column name="email"/>
        </createIndex>
        <createIndex indexName="idx_employee_department" tableName="employee">
            <column name="department_id"/>
        </createIndex>
        <createIndex indexName="idx_department_company" tableName="department">
            <column name="company_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>